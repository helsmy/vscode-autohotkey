{
	"name": "ahk-simple-ls",
	"displayName": "AutoHotKey Simple Support",
	"description": "Simple ahkls with advanced features.",
	"version": "0.8.22",
	"author": "helsmy",
	"license": "LGPLv3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/helsmy/vscode-autohotkey"
	},
	"bugs": {
		"url": "https://github.com/helsmy/vscode-autohotkey/issues"
	},
	"publisher": "helsmy",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"ahk",
		"autohotkey",
		"AutoHotkey"
	],
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.57.0"
	},
	"activationEvents": [
		"onLanguage:ahk"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "ahk",
				"aliases": [
					"AutoHotkey",
					"autohotkey",
					"ahk"
				],
				"extensions": [
					".ahk"
				],
				"configuration": "./ahk.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ahk",
				"scopeName": "source.ahk",
				"path": "./syntaxes/ahk.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "ahk",
				"path": "./snippets/ahk.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "AutoHotKeySimpleSupport",
			"properties": {
				"AutohotkeyLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"AutohotkeyLangeuageServer.sendError": {
					"scope": "application",
					"type":"string",
					"enum": [
						"on",
						"off"
					],
					"default": "off",
					"description": "Send errors to client or not.(In progress)"
				},
				"AutohotkeyLangeuageServer.logLevel" : {
					"scope": "application",
					"type": "string",
					"enum": [
						"error",
						"info",
						"veberse",
						"off"
					],
					"default": "info",
					"description": "Log level for language server.(In progress)"
				},
				"AutohotkeyLanguageServer.documentLanguage": {
					"scope": "application",
					"type": "string",
					"enum": [
						"no",
						"CN"
					],
					"default": "no",
					"description": "Which language document(for built-in functions[not available now] and varibles) to be used.'no' means no documents shown.(In progress)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "./node_modules/.bin/mocha -u tdd ./server/out/test/**/*.test.js",
		"publish": "vsce publish",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^5.2.0",
		"eslint": "^8.1.0",
		"mocha": "^9.0.0",
		"typescript": "^3.9.4"
	}
}
