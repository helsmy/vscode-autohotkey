{
    "name": "ahk-simple-ls",
    "displayName": "AutoHotKey Simple Support",
    "description": "Simple ahkls with advanced features.",
    "version": "0.8.27",
    "author": "helsmy",
    "license": "LGPLv3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/helsmy/vscode-autohotkey"
    },
    "bugs": {
        "url": "https://github.com/helsmy/vscode-autohotkey/issues"
    },
    "publisher": "helsmy",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "ahk",
        "autohotkey",
        "AutoHotkey"
    ],
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.57.0"
    },
    "activationEvents": [
        "onLanguage:ahk"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "ahk",
                "aliases": [
                    "AutoHotkey",
                    "autohotkey",
                    "ahk"
                ],
                "extensions": [
                    ".ahk"
                ],
                "configuration": "./ahk.configuration.json"
            }
        ],
        "commands":[
            {
                "category": "AutoHotkey",
                "command": "AutohotkeySS.runCurrentFile",
                "title": "Run Current File",
                "icon": "$(play)"
            },
            {
                "category": "AutoHotkey",
                "command": "AutohotkeySS.formatDocument",
                "title": "Format Current File"
            }
        ],
        "grammars": [
            {
                "language": "ahk",
                "scopeName": "source.ahk",
                "path": "./syntaxes/ahk.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ahk",
                "path": "./snippets/ahk.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "AutoHotKeySimpleSupport",
            "properties": {
                "ahk-simple-language-server.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                },
                "ahk-simple-language-server.traceServer.level" : {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "error",
                        "info",
                        "veberse",
                        "off"
                    ],
                    "default": "info",
                    "description": "Log level for language server.(In progress)"
                },
                "ahk-simple-language-server.sendError": {
                    "scope": "window",
                    "type":"boolean",
                    "default": false,
                    "description": "(Preview)Send errors to client or not. Only for debugging now"
                },
                "ahk-simple-language-server.documentLanguage": {
                    "scope": "application",
                    "type": "string",
                    "enum": [
                        "no",
                        "CN"
                    ],
                    "default": "no",
                    "description": "Which language document(for built-in functions[not available now] and varibles) to be used.'no' means no documents shown.(In progress)"
                },
                "ahk-simple-language-server.runtimePath": {
                    "scope": "window",
                    "type": "string",
                    "default": "",
                    "description": "Autohotkey runtime path, Such as `C:\\Program Files\\AutoHotkey\\AutoHotkey.exe`"  
                }
            }
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "AutohotkeySS.runCurrentFile",
                    "when": "editorLangId == ahk"
                },
                {
                    "command": "AutohotkeySS.formatDocument",
                    "when": "editorLangId == ahk"
                }
            ], 
            "editor/title/run": [
                {
                    "command": "AutohotkeySS.runCurrentFile",
                    "group": "navigation@0",
                    "title": "%autoHotkey.command.AutohotkeySS.runCurrentFile.title%",
                    "when": "resourceLangId == ahk && !isInDiffEditor && !virtualWorkspace && shellExecutionSupported"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "./node_modules/.bin/mocha -u tdd ./server/out/test/**/*.test.js",
        "publish": "vsce publish",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^7.0.2",
        "@types/node": "^12.12.0",
        "@typescript-eslint/parser": "^5.2.0",
        "eslint": "^8.1.0",
        "mocha": "^9.0.0",
        "typescript": "^3.9.4"
    }
}
